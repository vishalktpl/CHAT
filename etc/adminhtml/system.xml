<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
    <system>
        <section id="zopimlivechat" translate="label" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Zopimlivechat</label>
            <tab>customer</tab>
            <resource>Magento_Config::config</resource>
            <group id="zopimlivechat_options" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>ZopiM Live Chat</label>
                <field id="allow_chat" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="chat_embedd" translate="label comment" type="textarea" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Zopim Embedd Code</label>
                    <comment>Copy and paste widget code from zopim account.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
